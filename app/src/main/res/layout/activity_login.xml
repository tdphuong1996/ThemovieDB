<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_thumb_image"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    tools:context="com.appscyclone.themoviedb.activity.LoginActivity">

    <ImageView
        android:tint="@color/colorBlueLight"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/actLogin_llContent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_45sdp"
        android:src="@drawable/ic_logo" />
    <LinearLayout
        android:id="@+id/actLogin_llContent"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_while"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:inputType="text|textPersonName"
            android:id="@+id/actLogin_etUsername"
            android:drawablePadding="@dimen/_4sdp"
            android:background="@drawable/shape_radius_while"
            android:drawableStart="@drawable/ic_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlueLight"
            tools:ignore="ContentDescription" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/actLogin_etPassword"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableStart="@drawable/ic_lock"
            android:background="@drawable/shape_radius_while"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password" />
    </LinearLayout>
    <TextView
        android:id="@+id/actLogin_tvLogin"
        android:layout_marginTop="@dimen/_24sdp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/selector_radius_state_press_blue_light"
        android:text="@string/sign_in"
        android:layout_below="@+id/actLogin_llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<TextView
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_below="@+id/actLogin_tvLogin"
    android:id="@+id/actLogin_tvOr"
    android:textColor="@android:color/white"
    android:layout_centerHorizontal="true"
    android:textSize="18sp"
    android:text="@string/or"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/actLogin_tvOr"
        android:gravity="center"
        android:textSize="24sp"
        android:id="@+id/actLogin_tvVia"
        android:textColor="@android:color/white"
        android:text="@string/sign_up_via_website_themoviedb_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
