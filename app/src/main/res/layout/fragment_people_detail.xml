<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="true"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.appscyclone.themoviedb.fragment.PeopleDetailFragment"
    android:focusable="true">


   <include layout="@layout/view_custom_action_bar"/>

    <LinearLayout
        android:padding="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragDetailPeople_ivAvatar"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_160sdp"
            tools:background="@color/colorPrimary"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragDetailPeople_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Dwayne Johnson" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/biography" />

            <TextView
                android:id="@+id/fragDetailPeople_tvBiography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:maxLines="6"
                android:textStyle="bold"
                tools:text="Dwayne Douglas Johnson (born May 2, 1972), also known by his ring name The Rock, is an American and Canadian actor, producer and semi-retired professional wrestler, signed with WWE. " />

            <TextView
                android:id="@+id/fragDetailPeople_tvReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/read_more"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="vertical">

        <TableRow
            android:layout_marginBottom="@dimen/_4sdp"

            android:background="@drawable/shape_table_row_while">

            <TextView
                android:text="@string/known_for"
                android:textColor="@color/colorBlueLight" />

            <TextView
                android:id="@+id/fragDetailPeople_tvKnownFor"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@android:color/black"
                tools:text="Known For" />

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/shape_table_row_while">

            <TextView
                android:text="@string/gender"
                android:textColor="@color/colorBlueLight" />

            <TextView
                android:id="@+id/fragDetailPeople_tvGender"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@android:color/black"
                tools:text="Known For" />

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/shape_table_row_while">

            <TextView
                android:text="@string/known_credits"
                android:textColor="@color/colorBlueLight" />

            <TextView
                android:id="@+id/fragDetailPeople_tvKnownCredits"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@android:color/black"
                tools:text="Known For" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/shape_table_row_while">

            <TextView
                android:text="@string/birthday"
                android:textColor="@color/colorBlueLight" />

            <TextView
                android:id="@+id/fragDetailPeople_tvBirthday"
                android:textColor="@android:color/black"
                tools:layout_marginLeft="@dimen/_8sdp"
                tools:text="Known For" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/shape_table_row_while">

            <TextView
                android:text="@string/place_of_birth"
                android:textColor="@color/colorBlueLight" />

            <TextView
                android:id="@+id/fragDetailPeople_tvPlace"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@android:color/black"
                tools:text="Known For" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp">
        <ImageView
            android:id="@+id/fragDetailPeople_ivFB"
            android:tint="@color/colorBlueLight"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/ic_facebook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/fragDetailPeople_ivIG"
            android:tint="@color/colorBlueLight"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/ic_instagram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/fragDetailPeople_ivTW"
            android:tint="@color/colorBlueLight"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/ic_twitter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
