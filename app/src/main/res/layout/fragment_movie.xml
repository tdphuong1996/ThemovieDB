<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.appscyclone.themoviedb.fragment.MovieFragment">
   <FrameLayout
       android:background="@color/colorPrimary"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_40sdp">
       <TextView
           android:gravity="center"
           android:textColor="@color/colorBlueLight"
           android:text="@string/movie"
           android:textSize="18sp"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
   </FrameLayout>
    <android.support.design.widget.TabLayout
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="@color/colorBlueLight"
        app:tabIndicatorColor="@color/colorBlueLight"
        android:background="@color/colorPrimary"
        android:id="@+id/fragMovie_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragMovie_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
