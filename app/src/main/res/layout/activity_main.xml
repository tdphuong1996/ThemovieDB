<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_above="@id/actMain_bottomNavi"
        android:id="@+id/actMain_layout_Frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.BottomNavigationView

        app:menu="@menu/menu_category"
        android:background="@color/colorPrimary"
        android:id="@+id/actMain_bottomNavi"
        app:itemIconTint="@drawable/selector_white"
        app:itemTextColor="@drawable/selector_white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>